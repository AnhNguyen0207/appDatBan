<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginTop="10dp"
    android:paddingTop="20dp">


    <TextView
        android:id="@+id/txtMotaMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtTenMonAn"
        android:layout_alignBottom="@+id/imgMonAN"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="9dp"
        android:text="Mô tả món ăn"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txtTenMonAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imgMonAN"
        android:layout_alignBottom="@+id/imgMonAN"
        android:layout_marginStart="146dp"
        android:layout_marginBottom="48dp"
        android:text="Tên món ăn"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgMonAN"
        android:layout_width="128dp"
        android:layout_height="76dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_launcher_background" />

</RelativeLayout>